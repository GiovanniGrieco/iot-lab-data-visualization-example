    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/server.js",
            "protocol": "inspector",
            "smartStep": true,
            "showAsyncStacks": true,
            "sourceMaps": true,
            "env": {
                "NODE_ENV": "local",
                // Pick it up from your IoT Hub -> Shared Access Policies -> service -> Connection stringâ€”primary key
                "IotHubConnectionString": "INSERT_HERE_YOUR_IOT_HUB_CONNECTION_STRING",
                // Pick it up from your IoT Hub -> Built-in Endpoints -> Consumer Groups
                "EventHubConsumerGroup": "$Default"
            }
        }
    ]
}
